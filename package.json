{
  "name": "cocolu-ventas",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:mass": "node tests/mass-test-runner.js",
    "test:quick": "playwright test --grep 'quick'",
    "test:standard": "playwright test --grep 'standard'",
    "test:exhaustive": "playwright test --grep 'exhaustive'",
    "test:all": "node tests/run-all-tests.js",
    "test:all:quick": "node tests/run-all-tests.js --quick",
    "test:validation": "node tests/run-all-tests.js --validation",
    "test:performance": "node tests/run-all-tests.js --performance",
    "test:advanced": "playwright test tests/advanced-sales-tests.spec.js",
    "test:integration": "playwright test tests/integration-tests.spec.js",
    "test:error-handling": "playwright test tests/error-handling-tests.spec.js",
    "test:payment-types": "playwright test tests/payment-type-tests.spec.js",
    "analyze": "vite-bundle-analyzer",
    "clean": "rm -rf dist node_modules/.vite",
    "prepare": "husky install"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "axios": "1.12.2",
    "chart.js": "^4.5.0",
    "cheerio": "1.1.2",
    "dotenv": "^17.2.2",
    "node-cron": "4.2.1",
    "node-fetch": "3.3.2",
    "pinia": "3.0.3",
    "sweetalert2": "^11.12.3",
    "vue": "^3.4.29",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@playwright/test": "1.55.0",
    "@vitejs/plugin-vue": "4.6.2",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.19.2",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vite": "4.5.3",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^1.2.2",
    "vue-tsc": "^1.8.25"
  },
  "engines": {
    "node": "22.x"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
